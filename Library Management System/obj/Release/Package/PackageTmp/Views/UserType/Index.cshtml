@model IEnumerable<Library_Management_System.Models.UserType>

@{
    ViewBag.Title = "All Users > Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Add New User Type", "Create", null, new { @class = "btn btn-success" })

<hr>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User Type List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Type ID
                            </th>
                        <th>
                            Type Name
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserTypeID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Detail", "Detail", new { id = item.UserTypeID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.UserTypeID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


