@model IEnumerable<Library_Management_System.Models.BookAuthor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Add New Book Author", "Create", null, new { @class = "btn btn-success" })

<hr>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Book Author List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Book</th>
                        <th>Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.Book.BookTitle</td>
                            <td>@author.Author.AuthorName</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { bookId = author.Book.BookID, authorId = author.Author.AuthorID}, new { @class = "btn btn-success" })
                                @Html.ActionLink("Details", "Details", new { bookId = author.Book.BookID, authorId = author.Author.AuthorID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { bookId = author.Book.BookID, authorId = author.Author.AuthorID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>