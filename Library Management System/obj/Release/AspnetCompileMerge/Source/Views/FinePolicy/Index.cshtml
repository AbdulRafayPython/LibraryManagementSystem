@model IEnumerable<Library_Management_System.Models.FinePolicy>

@{
    ViewBag.Title = "Add Fine Policy > Policies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Add Fine Policy", "Create", null, new { @class = "btn btn-success" })

<hr>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Member List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MaxDays)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FineAmount)
                        </th>
                        <th>
                            Member Type Name
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FineAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MemberType.UserTypeName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.FinePolicyID }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Details", "Details", new { id = item.FinePolicyID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.FinePolicyID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
