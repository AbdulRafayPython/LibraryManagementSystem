@model IEnumerable<Library_Management_System.Models.BookReturn>

@{
    ViewBag.Title = "Returned Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Return for Other Issuance", "Create", null, new { @class = "btn btn-success" })

<hr>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Book Author List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IssueID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReturnDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FineAmount)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IssueID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FineAmount)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ReturnID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ReturnID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ReturnID })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
